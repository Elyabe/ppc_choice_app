    <script type="text/javascript">
    google.charts.load('current', {'packages':['corechart']});
    // google.charts.setOnLoadCallback(drawChart);
    function drawChart( statistics, div_name ) 
    {
      var data = google.visualization.arrayToDataTable(statistics);
      var options = {
          width: 450,
          height: 250,
          position: 'left',
          chartArea: { left:30, width: "50%" },
          is3D: false,
          enableInteractivity: 'start',
          legend: 
          {
            position: 'right',
            alignment: 'start',
            layout: 'vertical',
            maxLines: 3,
            //margin: -4,
            padding: 0,
            textStyle: {fontSize: 10}
          }
      };
      var chart = new google.visualization.PieChart(document.getElementById(div_name));
      chart.draw(data, options);
    }
</script>
