<% layout('../../template/ws-layout') -%>

  <div class="clearfix"></div>

    <!-- Start Home -->
    <div class="pageheader fixed-demo dark">
        <div class="container" >
            
            <div class="row">
                <div class="col-sm-7">
                    <h2 class="title">Choose your grid.</h2>
                    <p> Change if you want. </p>     
                </div>
                <div class="col-sm-5">
                    <img src="/image/ws/change.png" style="width: 400px;">
                </div>
              </div>
        </div>
    </div>
    <!-- End Home -->

    <!-- Start Content -->
<div class="section gray padding-bot50">
    <div class="container">
	<div class="row">
		<div class="col-sm-4">
		    <form action="/update/password" method="POST">
		    <label>Current Password</label>
		    <div class="form-group pass_show"> 
                <input type="password"  name="current_password" class="form-control" placeholder="Current Password"> 
            </div> 
		       <label>New Password</label>
            <div class="form-group pass_show"> 
                <input type="password" name="new_password" class="form-control" placeholder="New Password"> 
            </div> 
		       <label>Confirm Password</label>
            <div class="form-group pass_show"> 
                <input type="password" name="confirm_new_password" class="form-control" placeholder="Confirm Password"> 
            </div> 
            
		 <button class="btn btn-lg btn-primary btn-block" type="submit">Change</button>
		</div>  
	</div>
	</div>
		 </form>
	</div>
	</div>
</div>
</div>

<script> 
$(document).ready(function(){
$('.pass_show').append('<span class="ptxt">Show</span>');  
});
  

$(document).on('click','.pass_show .ptxt', function(){ 

$(this).text($(this).text() == "Show" ? "Hide" : "Show"); 

$(this).prev().attr('type', function(index, attr){return attr == 'password' ? 'text' : 'password'; }); 

});  
</script>